{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "strict": true
  },
  "include": [
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  ]
}
